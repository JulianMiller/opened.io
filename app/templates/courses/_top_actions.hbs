<div class="top-actions">
    <div class="btn-group">
		{{#link-to "student_view" class="btn btn-small btn-inverse" tagName="button"}}Show Student View{{/link-to}}
    </div>
    <div class="btn-group">
        {{#link-to "topics.new" class="btn btn-small ts-topic-addNewButton" tagName="button"}}<i class="icon-plus"></i> Add Topic{{/link-to}}
        {{#link-to "classes.new" class="btn btn-small" tagName="button"}}<i class="icon-plus"></i> Add Class{{/link-to}}
    </div>
    <div class="btn-group pull-right">
        <button class="btn btn-small" {{action "discardChanges" this}} {{bind-attr disabled=isNotDirty}}>Discard Changes</button>
        <button title="Delete Course" class="btn btn-small ts-course-deleteButton" {{action "deleteRecord" this}}><i class="icon-trash text--normal"></i> Delete Course</button>
    </div>
    <div class="btn-group pull-right">
        <button type="submit" {{action "saveChanges" this}} {{bind-attr disabled=isNotDirty}} {{bind-attr class=":btn :btn-success :btn-small isLoading:disabled"}}>
			{{#if isLoading}}
                Saving...
			{{else}}
                Save Changes
			{{/if}}
        </button>
    </div>
</div>
