<div class="page__header">
    <h1 class="page__title">Change Password</h1>
</div>

 <form class="form-horizontal" {{action updatePassword on="submit"}}>
	{{#if errorMessage}}
	   <div class="alert alert-error">{{errorMessage}}</div>
	{{/if}}
     <div class="control-group">
         <label class="control-label">Password</label>
         <div class="controls">
             {{input value=password type="password" class="ts-changePassword-password" required="true"}}
         </div>
     </div>
     <div class="control-group">
         <label class="control-label">Password Confirmation</label>
         <div class="controls">
             {{input value=password_confirmation type="password" class="ts-changePassword-passwordConfirmation" required="true"}}
         </div>
     </div>
     <div class="control-group">
         <label class="control-label">Current Password</label>
         <div class="controls">
             {{input value=current_password type="password" class="ts-changePassword-currentPassword" required="true"}}
         </div>
     </div>
	<div class="control-group">
		<div class="controls">
			{{input class="btn btn-success" type="submit" class="ts-changePassword-submitButton" value="Update"}}
		</div>
	</div>
</form>